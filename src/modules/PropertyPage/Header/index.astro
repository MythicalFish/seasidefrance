---
import Breadcrumbs from '../Breadcrumbs.astro';
import Button from '@components/Button';
import clsx from 'clsx';
import rbLogoWhite from '@images/rb-logo-white.png';
import rbLogo from '@images/rb-logo.png';

const { property, nextProperty } = Astro.props;
import styles from './styles.module.css';
---

<div class="hidden md:flex flex-col lg:justify-between lg:items-center lg:flex-row gap-4">
  <!-- <div>
    <img src={rbLogo.src} alt="RB Logo" class="w-60 mx-auto mb-4" />
  </div> -->
  <div>
    <Breadcrumbs property={property} />
    <div class="prose mb-4">
      <p>
        {property.intro}
      </p>
    </div>
  </div>
  <div class="hidden lg:block">
    <Button
      variant="secondary"
      href={`/${nextProperty.slug}`}
      iconName="arrow-right"
      iconPosition="right"
    >
      Next property
    </Button>
  </div>
</div>

<div
  class={clsx(
    'bg-waves',
    'md:hidden px-4 py-10 bg-[#056c8f] text-[rgb(255,255,255,0.8)] text-center'
  )}
>
  {property.id !== 333855 && <img src={rbLogoWhite.src} alt="RB Logo" class="w-60 mx-auto mb-4" />}
  <h3 class="text-4xl font-serif font-normal mb-4">{property.name}</h3>
  <p>
    {property.intro}
  </p>
</div>
