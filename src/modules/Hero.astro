---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  title: string;
  image: ImageMetadata;
}

const { title, image } = Astro.props;
---

<section class="relative w-screen h-[60vh] overflow-hidden">
  <Image
    src={image}
    alt={title}
    class="absolute inset-0 w-full h-full object-cover"
    width={1920}
    height={1080}
  />
  <div class="absolute inset-0 bg-black/40 flex flex-col items-center justify-center text-white">
    <h1 class="text-4xl md:text-6xl font-bold mb-4 text-center">{title}</h1>
    <slot />
  </div>
</section> 