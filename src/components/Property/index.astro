---
import FullPage from './LayoutFull.astro';
import ListItem from './LayoutCompact.astro';
import GridItem from './LayoutSquare.astro';
import type { PropertyPage } from '@data/properties/types';

interface Props {
  property: PropertyPage;
  layout?: 'square' | 'compact' | 'full';
  showReadMore?: boolean;
}

const { property, showReadMore = false, layout = 'square' } = Astro.props;
---

{layout === 'compact' && <ListItem property={property} showReadMore={showReadMore} />}
{layout === 'square' && <GridItem property={property} showReadMore={showReadMore} />}
{layout === 'full' && <FullPage property={property} showReadMore={showReadMore} />}
