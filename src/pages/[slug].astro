---
import Layout from "../layouts/Layout.astro";
import type { Property } from "../types/lodgify";
import properties from "../content/properties";
import { buildSlug } from "../lib/slug";

export async function getStaticPaths() {
  const propertyList = properties as Property[];
  return propertyList.map((property: Property) => ({
    params: { slug: buildSlug(property.name) },
    props: { property },
  }));
}

const { property } = Astro.props;
---

<Layout>
  <main class="container mx-auto px-4 py-8">
    <a href="/" class="text-blue-500 hover:text-blue-700 mb-4 block">Back to homepage</a>
    <h1 class="text-4xl font-bold mb-6">{property.name}</h1>
    
    {property.image_url && (
      <img 
        src={property.image_url.startsWith("//") ? `https:${property.image_url}` : property.image_url}
        alt={property.name}
        class="w-full h-[400px] object-cover rounded-lg mb-8"
      />
    )}

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <div>
        <div class="prose max-w-none" set:html={property.description} />
      </div>
      
      <div class="bg-gray-50 p-6 rounded-lg">
        <h2 class="text-2xl font-semibold mb-4">Property Details</h2>
        <dl class="space-y-4">
          <div>
            <dt class="font-medium">Location</dt>
            <dd>{property.address}, {property.zip} {property.city}, {property.country}</dd>
          </div>
          <div>
            <dt class="font-medium">Price Range</dt>
            <dd>{property.min_price} - {property.max_price} {property.currency_code} per night</dd>
          </div>
        </dl>
      </div>
    </div>
  </main>
</Layout> 