---
import Layout from "../layouts/Layout.astro";
import Hero from "../modules/Hero.astro";
import photo1 from "../images/old/chateau-pool-1.jpg";
import properties from "../content/properties";
import type { Property } from "../types/lodgify";
import { buildSlug } from "../lib/slug";

const propertyList = properties as Property[];
---

<Layout>
	<Hero title="Your holiday home in France" image={photo1}>
	</Hero>
	<section class="container mx-auto px-4 py-12">
		<h2 class="text-3xl font-bold mb-8">Our Properties</h2>
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
			{propertyList.map((property) => (
				<a 
					href={`/${buildSlug(property.name)}`}
					class="block bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300"
				>
					{property.image_url && (
						<img 
							src={property.image_url.startsWith("//") ? `https:${property.image_url}` : property.image_url}
							alt={property.name}
							class="w-full h-48 object-cover"
						/>
					)}
					<div class="p-6">
						<h3 class="text-xl font-semibold mb-2">{property.name}</h3>
						<p class="text-gray-600 mb-4">{property.address}, {property.city}</p>
						<div class="flex justify-between items-center">
							<span class="text-lg font-medium">{property.min_price} - {property.max_price} {property.currency_code}</span>
							<span class="text-sm text-gray-500">per night</span>
						</div>
					</div>
				</a>
			))}
		</div>
	</section>
</Layout>
