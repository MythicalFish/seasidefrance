---
import SearchPage from '@modules/SearchPage';
import properties from '@data/properties';
import Layout from '@modules/Layout/index.astro';
import SiteHeader from '@modules/SiteHeader/index.astro';
---

<Layout>
  <SiteHeader />
  <div class="text-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-2">Find Your Perfect Stay</h1>
    <p class="text-gray-600">Search available properties for your desired dates and duration</p>
  </div>
  <SearchPage properties={properties} client:load />
</Layout>
